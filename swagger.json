                                        "results": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "_id": {
                                                        "type": "string",
                                                        "example": "uLQICSdHuLQICSdHuLQICSdH"
                                                    },
                                                    "createdAt": {
                                                        "type": "string",
                                                        "example": "2017-01-27T08:19:14.135Z"
                                                    },
                                                    "userId": {
                                                        "type": "string",
                                                        "example": "uLQICSdH"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "samson"
                                                    },
                                                    "question": {
                                                        "type": "string",
                                                        "example": "What is your favorite hobby?"
                                                    },
                                                    "answers": {
                                                        "type": "array",
                                                        "example": [
                                                            {
                                                                "text": {
                                                                    "type": "plain_text",
                                                                    "text": "Movies",
                                                                    "emoji": true
