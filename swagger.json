                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "ok": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Could not be completed"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/messages": {
            "post": {
                "description": "Endpoint to process slack messages",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                ],
                                "type": "object",
                                "properties": {
                                    "token": {
                                        "type": "string",
                                        "example": "DekXm5jnABUKXBJG7VrxWjJS"
                                    },
                                    "team_id": {
                                        "type": "string",
                                        "example": "T02KF0772CF"
                                    },
                                    "team_domain": {
                                        "type": "string",
                                        "example": "serentestgroup"
                                    },
                                    "channel_id": {
                                        "type": "string",
                                        "example": "C02KNU5TVT8"
                                    },
                                    "channel_name": {
                                        "type": "string",
                                        "example": "project"
                                    },
                                    "user_id": {
                                        "type": "string",
                                        "example": "U02KVL42CP4"
                                    },
                                    "user_name": {
                                        "type": "string",
                                        "example": "sammy"
                                    },
                                    "command": {
                                        "type": "string",
                                        "example": "/bot"
                                    }, 
                                    "text": {
                                        "type": "string",
                                        "example": "hello"
                                    },
                                    "api_app_id": {
                                        "type": "string",
                                        "example": "A02KVMQ1SV8"
                                    },
                                    "is_enterprise_install": {
                                        "type": "boolean",
                                        "example": false
                                    },
                                    "response_url": {
                                        "type": "string",
                                        "example": "https://hooks.slack.com/commands/T02KF0772CF/2676425965490/pRT9EBU2oD7daSoJSCcYSZn4"
                                    },
                                    "trigger_id": {
                                        "type": "string",
                                        "example": "2673439541269.2661007240423.d8db122f86ded9734c02736cdb60d88f"
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success"
                    },
                    "400": {
                        "description": "Verification failed"
                    }
                }
            }
        }
    }
}