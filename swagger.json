{
    "openapi": "3.0.0",
    "info": {
        "title": "seren slack",
        "description": "seren challenge",
        "version": "1.0.0",
        "contact": {
            "email": "hi@samuel.com.ng"
        }
    },
    "servers": [
        {
            "url": "https://seren-slack.herokuapp.com/"
        }
    ],
    "paths": {
        "/healthCheck": {
            "get": {
                "description": "Health check to see if service is up",
                "operationId": "healthCheck",
                "parameters": [],
                "responses": {
                    "200": {
                        "description": "Service is up and running"
                    }
                }
            }
        },
        "/answers/all": {
            "post": {
                "description": "Allows us to get all answers from all users",
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                ],
                                "type": "object",
                                "properties": {
                                    "limit": {
                                        "type": "string",
                                        "example": "30"
                                    },
                                    "page": {
                                        "type": "integer",
                                        "example": 2
                                    }
                                }
                            }
                        }
                    },
                    "required": true
                },
                "responses": {
                    "200": {
                        "description": "Success",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "ok": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "totalCount": {
                                            "type": "integer",
                                            "example": 3
                                        },
                                        "paginationLimit": {
                                            "type": "integer",
                                            "example": 50
                                        },
                                        "results": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "properties": {
                                                    "_id": {
                                                        "type": "string",
                                                        "example": "uLQICSdHuLQICSdHuLQICSdH"
                                                    },
                                                    "createdAt": {
                                                        "type": "string",
                                                        "example": "2017-01-27T08:19:14.135Z"
                                                    },
                                                    "userId": {
                                                        "type": "string",
                                                        "example": "uLQICSdH"
                                                    },
                                                    "name": {
                                                        "type": "string",
                                                        "example": "samson"
                                                    },
                                                    "question": {
                                                        "type": "string",
                                                        "example": "What is your favorite hobby?"
                                                    },
                                                    "answers": {
                                                        "type": "array",
                                                        "example": [
                                                            {
                                                                "text": {
                                                                    "type": "plain_text",
                                                                    "text": "Movies",
                                                                    "emoji": true
                                                                },
                                                                "value": "Movies"
                                                            }]
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "ok": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Could not be completed"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
